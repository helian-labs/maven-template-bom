{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch WebApp",
            "request": "launch",
            "mainClass": "com.lakala.zf.lawp.LawpCheckApplication",
            "projectName": "webapp",
            "args": "",
            "vmArgs": "-Dspring.profiles.active=dev",
            "env": {
                "SPRING_PROFILES_ACTIVE": "dev"
            },
            "preLaunchTask": "Maven Clean Install"
        },
        {
            "type": "java",
            "name": "Debug WebApp",
            "request": "launch",
            "mainClass": "com.lakala.zf.lawp.LawpCheckApplication",
            "projectName": "webapp",
            "args": "",
            "vmArgs": "-Dspring.profiles.active=dev -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005",
            "env": {
                "SPRING_PROFILES_ACTIVE": "dev"
            }
        },
        {
            "type": "java",
            "name": "Run Current Test",
            "request": "launch",
            "mainClass": "org.junit.platform.console.ConsoleLauncher",
            "args": [
                "--scan-classpath",
                "--include-classname=${file}",
                "--details=tree"
            ],
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
