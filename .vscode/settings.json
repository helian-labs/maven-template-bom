{
    // Java配置
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.annotationProcessing.enabled": true,
    "java.compile.annotationProcessorPath": "${workspaceFolder}/**/*.jar",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-8",
            "path": "/Library/Java/JavaVirtualMachines/jdk1.8.0_202.jdk/Contents/Home"
        }
    ],

    // Spring Boot配置
    "spring-boot.ls.java.home": "/Library/Java/JavaVirtualMachines/jdk1.8.0_202.jdk/Contents/Home",
    "spring-boot.ls.vmargs": "-Xmx1024M -Xms256M",

    // 代码格式化配置
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll": true
    },
    "editor.defaultFormatter": "redhat.java",
    "java.format.settings.url": "${workspaceFolder}/config/styleguide/intellij-java-google-style.xml",
    "java.format.settings.profile": "GoogleStyle",

    // 文件排除配置
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/target": true,
        "**/build": true,
        "**/node_modules": true,
        "**/*.class": true
    },

    // 搜索配置
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/target": true,
        "**/build": true,
        "**/*.jar": true
    },

    // 终端配置
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",

    // 调试配置
    "debug.onTaskErrors": "showErrors",
    "debug.internalConsoleOptions": "openOnSessionStart",

    // 工作区设置
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // Java调试配置
    "java.debug.settings.onBuildFailureProceed": true,
    "java.debug.settings.forceBuildBeforeLaunch": true,
    "java.debug.settings.hotCodeReplace": "auto",

    // 语言特定设置
    "[java]": {
        "editor.defaultFormatter": "redhat.java",
        "editor.suggestSelection": "first",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml",
        "editor.tabSize": 2
    },

    "[properties]": {
        "editor.tabSize": 2
    },

    // 其他优化设置
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.wordWrap": "off",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "blink",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.5,

    // Git配置
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.enableSmartCommit": true
}
